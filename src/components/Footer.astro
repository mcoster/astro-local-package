---
import { siteConfig } from '@/config/site';
import { getCollection } from 'astro:content';
import { getCachedFooterLocations } from '@/lib/footer-locations';
import MapEmbed from '@/components/MapEmbed.astro';

const currentYear = new Date().getFullYear();

// Fetch services from content collection
const services = await getCollection('services');
const sortedServices = services.sort((a, b) => a.data.order - b.data.order);

// Get footer locations (11 suburbs)
const footerLocations = await getCachedFooterLocations();

const quickLinks = [
  { label: 'Home', href: '/', title: 'Go to Adelaide Roof Cleaning Pros homepage' },
  { label: 'About', href: '/about', title: 'Learn about Adelaide Roof Cleaning Pros' },
  { label: 'Contact', href: '/contact', title: 'Contact us for a free roof cleaning quote' },
];

const legalLinks = [
  { label: 'Privacy Policy', href: '/privacy', title: 'View our privacy policy' },
  { label: 'Terms & Conditions', href: '/terms', title: 'View our terms and conditions' },
];
---

<footer class="bg-gray-900 text-gray-300">
  <div class="max-w-7xl mx-auto px-4 py-12">
    <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
      <!-- Business Info -->
      <div class="md:col-span-1">
        <h3 class="text-white text-lg font-bold mb-4">{siteConfig.businessName}</h3>
        <p class="text-sm mb-4">{siteConfig.tagline}</p>
        <div class="space-y-2 text-sm">
          <p>{siteConfig.fullAddress}</p>
          <p>
            <a href={`tel:${siteConfig.formattedPhone}`} title="Call Adelaide Roof Cleaning Pros" class="hover:text-white transition-colors">
              {siteConfig.phone}
            </a>
          </p>
          <p class="text-gray-300">
            {siteConfig.email}
          </p>
        </div>
        
        <!-- Business Hours -->
        <div class="mt-6">
          <h4 class="text-white text-base font-semibold mb-3">Business Hours</h4>
          <dl class="space-y-1 text-sm">
            <div>
              <span class="font-medium">Mon-Fri:</span> {siteConfig.hours.monday}
            </div>
            <div>
              <span class="font-medium">Saturday:</span> {siteConfig.hours.saturday}
            </div>
            <div>
              <span class="font-medium">Sunday:</span> {siteConfig.hours.sunday}
            </div>
          </dl>
        </div>
        
        <!-- Social Links -->
        {(siteConfig.social.facebook || siteConfig.social.instagram || siteConfig.social.linkedin || siteConfig.social.youtube) && (
          <div class="mt-6 flex space-x-4">
            {siteConfig.social.facebook && (
              <a
                href={siteConfig.social.facebook}
                target="_blank"
                rel="noopener noreferrer"
                title="Follow us on Facebook"
                class="text-gray-400 hover:text-white transition-colors"
                aria-label="Facebook"
              >
                <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
                </svg>
              </a>
            )}
            {siteConfig.social.instagram && (
              <a
                href={siteConfig.social.instagram}
                target="_blank"
                rel="noopener noreferrer"
                class="text-gray-400 hover:text-white transition-colors"
                aria-label="Instagram"
              >
                <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zM5.838 12a6.162 6.162 0 1 1 12.324 0 6.162 6.162 0 0 1-12.324 0zM12 16a4 4 0 1 1 0-8 4 4 0 0 1 0 8zm4.965-10.405a1.44 1.44 0 1 1 2.881 0 1.44 1.44 0 0 1-2.881 0z"/>
                </svg>
              </a>
            )}
            {siteConfig.social.linkedin && (
              <a
                href={siteConfig.social.linkedin}
                target="_blank"
                rel="noopener noreferrer"
                class="text-gray-400 hover:text-white transition-colors"
                aria-label="LinkedIn"
              >
                <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                </svg>
              </a>
            )}
            {siteConfig.social.youtube && (
              <a
                href={siteConfig.social.youtube}
                target="_blank"
                rel="noopener noreferrer"
                class="text-gray-400 hover:text-white transition-colors"
                aria-label="YouTube"
              >
                <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"/>
                </svg>
              </a>
            )}
          </div>
        )}
      </div>
      
      <!-- Our Services -->
      <div class="md:col-span-1">
        <h4 class="text-white text-base font-semibold mb-4">Our Services</h4>
        <ul class="space-y-2">
          {sortedServices.map((service) => (
            <li>
              <a href={`/services/${service.slug}`} title={`${service.data.title} services in Adelaide`} class="text-sm hover:text-white transition-colors">
                {service.data.title}
              </a>
            </li>
          ))}
        </ul>
      </div>
      
      <!-- Service Areas -->
      <div class="md:col-span-1">
        <h4 class="text-white text-base font-semibold mb-4">Service Areas</h4>
        <ul class="space-y-1">
          <!-- Main location linking to homepage -->
          <li>
            <a href="/" title="Roof cleaning services in Adelaide" class="text-sm hover:text-white transition-colors font-semibold">
              {siteConfig.mainLocation}
            </a>
          </li>
          <!-- Dynamic location links -->
          {footerLocations.map((location) => (
            <li>
              <a 
                href={location.url} 
                class="text-sm hover:text-white transition-colors"
              >
                {location.suburb.name}
              </a>
            </li>
          ))}
          <!-- View all areas link -->
          <li>
            <a 
              href="/locations/" 
              class="text-sm font-semibold hover:text-white transition-colors"
            >
              View All Areas →
            </a>
          </li>
        </ul>
      </div>
      
      <!-- Map Embed -->
      <div class="md:col-span-1">
        <MapEmbed />
      </div>
    </div>
    
    <!-- Bottom Bar -->
    <div class="mt-8 pt-8 border-t border-gray-800">
      <div class="flex flex-col md:flex-row justify-between items-center space-y-4 md:space-y-0">
        <p class="text-sm">
          © {currentYear} {siteConfig.businessName}. All rights reserved.
        </p>
        <div class="flex flex-wrap gap-x-6 gap-y-2 text-sm justify-center md:justify-end">
          {quickLinks.map((link) => (
            <a href={link.href} class="hover:text-white transition-colors">
              {link.label}
            </a>
          ))}
          <span class="text-gray-600">|</span>
          {legalLinks.map((link) => (
            <a href={link.href} class="hover:text-white transition-colors">
              {link.label}
            </a>
          ))}
        </div>
      </div>
    </div>
  </div>
</footer>