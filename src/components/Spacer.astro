---
export interface Props {
  size?: 'sm' | 'md' | 'lg' | 'xl' | '2xl';
}

const { size = 'md' } = Astro.props;

const sizeClasses = {
  sm: 'py-3',
  md: 'py-6',
  lg: 'py-10',
  xl: 'py-12',
  '2xl': 'py-16'
};
---

<div class={`spacer ${sizeClasses[size]}`}></div>

<style>
  .spacer {
    display: block;
    width: 100%;
  }
</style>