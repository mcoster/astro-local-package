    text-decoration: underline;
  }
  
  .prose :global(a:hover) {
    color: #1d4ed8;
  }
  
  .prose :global(blockquote) {
    border-left: 4px solid #d1d5db;
    padding-left: 1rem;
    font-style: italic;
    margin: 1rem 0;
  }
  
  .prose :global(table) {
    width: 100%;
    border-collapse: collapse;
    margin: 1.5rem 0;
  }
  
  .prose :global(th),
  .prose :global(td) {
    border: 1px solid #d1d5db;
    padding: 0.5rem 1rem;
    text-align: left;
  }
  
  .prose :global(th) {
    background-color: #f9fafb;
    font-weight: 600;
  }
  
  .prose :global(tr:nth-child(even)) {
    background-color: #f9fafb;
  }
  
  /* Two-column layout styles */
  .prose :global(.two-column) {
    padding: 1.5rem 0;
    margin: 1.5rem 0;
  }
  
  .prose :global(.two-column:first-child) {
    margin-top: 0;
  }
  
  .prose :global(.two-column:last-child) {
    margin-bottom: 0;
  }
  
  /* Size variants */
  .prose :global(.two-column--compact) {
    padding: 1.5rem 0;
  }
  
  .prose :global(.two-column--expanded) {
    padding: 4rem 0;
  }
  
  .prose :global(.two-column__container) {
    max-width: 80rem;
    margin: 0 auto;
    padding: 0 1rem;
  }
  
  .prose :global(.two-column__grid) {
    display: grid;
    gap: 3rem;
    align-items: center;
  }
  
  @media (min-width: 768px) {
    .prose :global(.two-column__grid) {
      grid-template-columns: 1fr 1fr;
      gap: 3rem;
    }
    
    .prose :global(.two-column__grid--left .two-column__image-wrapper) {
      order: -1;
    }
  }
  
  .prose :global(.two-column__content h3) {
    font-size: 1.5rem;
    font-weight: 600;
    margin: 0 0 1rem 0;
    color: #1f2937;
  }
  
  .prose :global(.two-column__content p) {
    margin-bottom: 1rem;
  }
  
  .prose :global(.two-column__content ul),
  .prose :global(.two-column__content ol) {
    margin: 1rem 0;
    padding-left: 1.5rem;
  }
  
  .prose :global(.two-column__content li) {
    margin-bottom: 0.5rem;
  }
  
  .prose :global(.two-column__cta) {
    display: inline-block;
    margin-top: 1.5rem;
    padding: 0.75rem 1.5rem;
    background: var(--color-primary, #3b82f6);
    color: white;
    font-weight: 500;
    text-decoration: none;
    border-radius: 0.375rem;
    transition: background 150ms ease;
  }
  
  .prose :global(.two-column__cta:hover) {
    background: var(--color-primary-dark, #2563eb);
    color: white;
  }
  
  /* Two-column sections no longer have wrapper backgrounds */
  
  .prose :global(.two-column__image-wrapper) {
    position: relative;
    overflow: hidden;
    border-radius: 0.5rem;
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
  }
  
  .prose :global(.two-column__image) {
    width: 100%;
    height: auto;
    display: block;
    transition: transform 300ms ease;
  }
  
  .prose :global(.two-column__image-wrapper:hover .two-column__image) {
    transform: scale(1.05);
  }
  
  /* Mobile: Always show text first */
  @media (max-width: 767px) {
    .prose :global(.two-column__image-wrapper) {
      order: 2;
    }
    
    .prose :global(.two-column__content) {
      order: 1;
    }
  }
  
  /* H2 Section Backgrounds */
  .prose :global(.h2-section) {
    margin-left: calc(-50vw + 50%);
    margin-right: calc(-50vw + 50%);
    padding: 2rem calc(50vw - 50% + 1rem);
  }
  
  @media (min-width: 640px) {
    .prose :global(.h2-section) {
      padding: 2.5rem calc(50vw - 50% + 1rem);
    }
  }
  
  @media (min-width: 768px) {
    .prose :global(.h2-section) {
      padding: 3rem calc(50vw - 50% + 1rem);
    }
  }
  
  /* Alternating backgrounds based on section index and startIndex */
  .service-content[data-start-index="0"] .prose :global(.h2-section[data-section-index="0"]),
  .service-content[data-start-index="2"] .prose :global(.h2-section[data-section-index="0"]),
  .service-content[data-start-index="4"] .prose :global(.h2-section[data-section-index="0"]),
  .service-content[data-start-index="1"] .prose :global(.h2-section[data-section-index="1"]),
  .service-content[data-start-index="3"] .prose :global(.h2-section[data-section-index="1"]),
  .service-content[data-start-index="5"] .prose :global(.h2-section[data-section-index="1"]) {
    background-color: #ffffff;
  }
  
  .service-content[data-start-index="0"] .prose :global(.h2-section[data-section-index="1"]),
  .service-content[data-start-index="2"] .prose :global(.h2-section[data-section-index="1"]),
  .service-content[data-start-index="4"] .prose :global(.h2-section[data-section-index="1"]),
  .service-content[data-start-index="1"] .prose :global(.h2-section[data-section-index="0"]),
  .service-content[data-start-index="3"] .prose :global(.h2-section[data-section-index="0"]),
  .service-content[data-start-index="5"] .prose :global(.h2-section[data-section-index="0"]) {
    background-color: #f9fafb;
  }
  
  /* Continue alternating for additional sections */
  .service-content[data-start-index="0"] .prose :global(.h2-section[data-section-index="2"]),
  .service-content[data-start-index="2"] .prose :global(.h2-section[data-section-index="2"]),
  .service-content[data-start-index="4"] .prose :global(.h2-section[data-section-index="2"]),
