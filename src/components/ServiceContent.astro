  }
  
  .service-content[data-start-index="0"] .prose :global(.h2-section[data-section-index="3"]),
  .service-content[data-start-index="2"] .prose :global(.h2-section[data-section-index="3"]),
  .service-content[data-start-index="4"] .prose :global(.h2-section[data-section-index="3"]),
