---
import Section from './Section.astro';

export interface Props {
  title?: string;
  variant?: 'white' | 'gray' | 'primary' | 'gradient' | 'transparent';
  className?: string;
  startIndex?: number; // For H2 section counting
  noBackground?: boolean; // Skip Section wrapper for content with own backgrounds
}

const { title, variant = 'white', className = '', startIndex = 0, noBackground = true } = Astro.props;

// ServiceContent typically contains markdown with H2 sections that have their own backgrounds
// So we default noBackground to true to avoid double backgrounds
---

{noBackground ? (
  <div class={`service-content ${className}`} data-start-index={startIndex}>
    <div class="container mx-auto px-4">
      {title && (
        <h2 class="text-3xl md:text-4xl font-bold mb-8 text-center">{title}</h2>
      )}
      <div class="max-w-4xl mx-auto">
        <article class="prose prose-lg prose-gray max-w-none">
          <slot />
        </article>
      </div>
    </div>
  </div>
) : (
  <Section variant={variant} className={`service-content ${className}`} data-start-index={startIndex}>
    <div class="container mx-auto px-4">
      {title && (
        <h2 class="text-3xl md:text-4xl font-bold mb-8 text-center">{title}</h2>
      )}
      <div class="max-w-4xl mx-auto">
        <article class="prose prose-lg prose-gray max-w-none">
          <slot />
        </article>
      </div>
    </div>
  </Section>
)}

