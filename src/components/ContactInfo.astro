---
/**
 * Contact Information Component
 * Displays contact details including phone, email, and address
 */

export interface Props {
  heading?: string;
  phone?: string;
  email?: string;
  address?: string;
  showIcons?: boolean;
}

const {
  heading = 'Get In Touch',
  phone,
  email,
  address,
  showIcons = true,
} = Astro.props;
---

<div class="contact-info-section">
  <div class="container mx-auto px-4 max-w-2xl">
    <div class="bg-white rounded-lg shadow-sm p-6">
      {heading && (
        <h2 class="text-2xl font-bold mb-6">{heading}</h2>
      )}
      
      <div class="space-y-4">
    {phone && (
      <div class="flex items-start space-x-3">
        {showIcons && (
          <svg class="w-6 h-6 text-primary mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
          </svg>
        )}
        <div>
          <p class="font-semibold">Phone</p>
          <a href={`tel:${phone.replace(/\D/g, '')}`} class="text-primary hover:underline">
            {phone}
          </a>
        </div>
      </div>
    )}
    
    {email && (
      <div class="flex items-start space-x-3">
        {showIcons && (
          <svg class="w-6 h-6 text-primary mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
          </svg>
        )}
        <div>
          <p class="font-semibold">Email</p>
          <span class="text-gray-600">{email}</span>
        </div>
      </div>
    )}
    
    {address && (
      <div class="flex items-start space-x-3">
        {showIcons && (
          <svg class="w-6 h-6 text-primary mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
          </svg>
        )}
        <div>
          <p class="font-semibold">Address</p>
          <p class="text-gray-600">{address}</p>
        </div>
      </div>
    )}
      </div>
    </div>
  </div>
</div>

<style>
  .contact-info-section {
    background-color: #f9fafb;
  }
  .text-primary {
    color: var(--color-primary, #3b82f6);
  }
</style>